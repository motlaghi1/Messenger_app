//all bootstrap code sourced from https://getbootstrap.com/docs/5.3/getting-started/introduction/

html 
    head 
        title Protected page 
        link(rel="stylesheet" href="/css/theme.min.css")
        if message 
            //creates message box highlighted in red
            body.text-center 
                .cover-container.d-flex.vh-100.p-3.mx-auto.flex-column
                    //center content
                    .row.justify-content-center
                        //take up 6 flexbox columns on medium screen, 8 columns on small screen
                        .col-md-6.col-sm-8
                            //display loaded message as a red alert
                            .alert.alert-danger #{message}
                            //primary color button that redirects to login page
                            a.btn.btn-primary.btn-lg(href="/login") Login
        else 
            body.bg-light
        .cover-container.d-flex.min-vh-100.p-3.mx-auto.flex-column
            .container
                //center content
                .row.justify-content-center
                    .col-md-6
                        //display alert message if new userID already taken
                        if alert 
                            .alert.alert-danger #{alert.message}
                        //form box
                        form(action="/edit_profile" method="POST")
                            .card(class='h-100').mb-4
                                .card-body
                                    // Form start
                                    .row.justify-content-start
                                        h1.mb-4.text-primary Edit Profile
                                        .form-group.col-xl-6.col-lg-6.col-md-6.col-sm-6.col-12.mb-4
                                            h5.label(for="id") ID
                                            input.form-control.form-control-sm(type="text" name="id" id="id" required placeholder=`${id}`)
                                        .form-group.col-xl-6.col-lg-6.col-md-6.col-sm-6.col-12
                                            h5.label(for="name") Name
                                            input.form-control.form-control-sm(type="text" name="name" id="name" required placeholder=`${name}`)
                                        .form-group.col-xl-6.col-lg-6.col-md-6.col-sm-6.col-12
                                            h5.label(for="email") Email
                                            input.form-control.form-control-sm(type="email" name="email" id="email" required placeholder=`${email}`)
                                        .form-group.col-xl-6.col-lg-6.col-md-6.col-sm-6.col-12
                                            h5.label(for="UDid") UD ID
                                            input.form-control.form-control-sm(type="text" name="UDid" id="UDid" required placeholder=`${UDid}`)
                                    .mt-auto.pt-5
                            .d-flex.justify-content-end
                                a.btn.btn-danger.btn-lg.me-2(href="/protected_page") Cancel
                                button.btn.btn-danger.btn-lg.me-2(type="reset") Reset
                                button.btn.btn-primary.btn-lg(type="submit") Submit

